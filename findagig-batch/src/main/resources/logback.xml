<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

    <!-- file generated by git-commit-id-plugin git-commit-id-plugin. check pom.xml -->
    <property resource="git.properties"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="ASYNC_JSON" class="net.logstash.logback.appender.LoggingEventAsyncDisruptorAppender">
        <!-- ConsoleAppender is good for now, but must be replaced by "ch.qos.logback.core.rolling.RollingFileAppender" -->
        <appender  class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <customFields>{"application":"findagig-batch","gitCommit":"${git.commit.id}" }</customFields>
            </encoder>
        </appender>
    </appender>

    <root level="info">
        <appender-ref ref="ASYNC_JSON"/>
    </root>

</configuration>